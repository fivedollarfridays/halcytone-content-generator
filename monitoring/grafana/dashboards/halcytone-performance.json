{
  "dashboard": {
    "id": null,
    "title": "Halcytone Performance Monitoring",
    "tags": ["halcytone", "performance", "baseline"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Response Time Percentiles",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"halcytone\"}[5m]))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"halcytone\"}[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"halcytone\"}[5m]))",
            "legendFormat": "P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 2},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate (RPS)",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"halcytone\"}[5m])",
            "legendFormat": "RPS"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 10}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0}
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"halcytone\", status!~\"2..\"}[5m]) / rate(http_requests_total{job=\"halcytone\"}[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.01},
                {"color": "red", "value": 0.05}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0}
      },
      {
        "id": 4,
        "title": "Response Time Trends",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"halcytone\"}[5m]))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"halcytone\"}[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"halcytone\"}[5m]))",
            "legendFormat": "P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10,
              "gradientMode": "opacity"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "P50"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}]
            },
            {
              "matcher": {"id": "byName", "options": "P95"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}}]
            },
            {
              "matcher": {"id": "byName", "options": "P99"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Content Generation Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"halcytone\", endpoint=~\"/api/v2/content/.*\"}[5m]))",
            "legendFormat": "Content Generation P95"
          },
          {
            "expr": "rate(http_requests_total{job=\"halcytone\", endpoint=~\"/api/v2/content/.*\"}[5m])",
            "legendFormat": "Content Generation RPS"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "axisPlacement": "left"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Content Generation RPS"},
              "properties": [
                {"id": "unit", "value": "reqps"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Health Check Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"halcytone\", endpoint=~\"/health|/ready|/live\"}[5m]))",
            "legendFormat": "Health Checks P95"
          },
          {
            "expr": "rate(http_requests_total{job=\"halcytone\", endpoint=~\"/health|/ready|/live\"}[5m])",
            "legendFormat": "Health Checks RPS"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "axisPlacement": "left"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Health Checks RPS"},
              "properties": [
                {"id": "unit", "value": "reqps"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Performance Baseline Comparison",
        "type": "table",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"halcytone\"}[5m]))",
            "legendFormat": "Current P95",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "list"
            }
          }
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "Value": "Current P95 (ms)",
                "__name__": "Metric"
              }
            }
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "SLI Compliance",
        "type": "stat",
        "targets": [
          {
            "expr": "avg_over_time((histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"halcytone\"}[5m])) < 5)[1h:]) * 100",
            "legendFormat": "Latency SLI"
          },
          {
            "expr": "avg_over_time((rate(http_requests_total{job=\"halcytone\", status!~\"2..\"}[5m]) / rate(http_requests_total{job=\"halcytone\"}[5m]) < 0.001)[1h:]) * 100",
            "legendFormat": "Availability SLI"
          },
          {
            "expr": "avg_over_time((rate(http_requests_total{job=\"halcytone\"}[5m]) > 10)[1h:]) * 100",
            "legendFormat": "Throughput SLI"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24}
      },
      {
        "id": 9,
        "title": "Request Volume by Endpoint",
        "type": "piechart",
        "targets": [
          {
            "expr": "topk(10, rate(http_requests_total{job=\"halcytone\"}[5m]))",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "vis": false,
                "legend": false
              }
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24}
      },
      {
        "id": 10,
        "title": "System Resource Utilization",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"halcytone\"}[5m]) * 100",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "process_resident_memory_bytes{job=\"halcytone\"}",
            "legendFormat": "Memory Usage"
          },
          {
            "expr": "process_open_fds{job=\"halcytone\"}",
            "legendFormat": "Open File Descriptors"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "CPU Usage %"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {"id": "custom.axisPlacement", "value": "left"}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Memory Usage"},
              "properties": [
                {"id": "unit", "value": "bytes"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Open File Descriptors"},
              "properties": [
                {"id": "unit", "value": "short"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32}
      },
      {
        "id": 11,
        "title": "Alert Status",
        "type": "alertlist",
        "options": {
          "showOptions": "current",
          "maxItems": 20,
          "sortOrder": 1,
          "dashboardAlerts": false,
          "alertName": "",
          "dashboardTitle": "",
          "folderId": null,
          "tags": ["halcytone", "performance"]
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"halcytone\"}, instance)",
          "current": {
            "value": "All",
            "text": "All"
          },
          "includeAll": true,
          "multi": true,
          "options": [],
          "refresh": 1,
          "regex": "",
          "sort": 0
        },
        {
          "name": "endpoint",
          "type": "query",
          "query": "label_values(http_requests_total{job=\"halcytone\"}, endpoint)",
          "current": {
            "value": "All",
            "text": "All"
          },
          "includeAll": true,
          "multi": true,
          "options": [],
          "refresh": 1,
          "regex": "",
          "sort": 0
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "enable": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "type": "tags",
          "tags": ["deployment", "halcytone"]
        },
        {
          "name": "Performance Tests",
          "enable": true,
          "iconColor": "rgba(255, 96, 96, 1)",
          "type": "tags",
          "tags": ["performance-test", "baseline"]
        }
      ]
    }
  }
}